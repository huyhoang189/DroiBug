<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal"
    android:background="#F5F7FA">

    <!-- Tiêu đề -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CTF Challenge - Lab 14"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#2E3B4E"
        android:gravity="center"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kiểm tra quyền truy cập dựa trên trạng thái Root"
        android:textSize="16sp"
        android:textColor="#5D6D7E"
        android:gravity="center"
        android:layout_marginBottom="32dp" />

    <!-- CardView chứa chức năng -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:elevation="8dp"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center_horizontal">

            <!-- Nút kiểm tra thiết bị -->
            <Button
                android:id="@+id/check_root_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kiểm tra thiết bị"
                android:textAllCaps="false"
                android:padding="12dp"
                android:background="@drawable/button_primary_background"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="16dp" />



        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Kết quả -->
    <TextView
        android:id="@+id/result_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#4CAF50"
        android:gravity="center"
        android:layout_marginTop="16dp" />

    <!-- Gợi ý -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gợi ý: Decompile Smali để bypass kiểm tra"
        android:textStyle="italic"
        android:textColor="#757575"
        android:gravity="center"
        android:layout_marginTop="16dp" />

</LinearLayout>